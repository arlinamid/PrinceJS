{
  "name": "prince-js",
  "version": "1.0.0",
  "description": "Prince of Persia (JavaScript)",
  "type": "module",
  "main": "index.js",
  "directories": {
    "assets": "assets",
    "converter": "converter",
    "lib": "lib",
    "src": "src"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "convert": "node converter/index.js",
    "convert:own:99": "node converter/index.js './converter/98 - Own/level1.xml' 98",
    "convert:own:100": "node converter/index.js './converter/98 - Own/level2.xml' 98",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier \"**/*.{js,json,md,html}\" --write --log-level error",
    "format:check": "prettier \"**/*.{js,json,md,html}\" --check",
    "code-quality": "npm run format && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oklemenz/PrinceJS.git"
  },
  "bugs": {
    "url": "https://github.com/oklemenz/PrinceJS/issues"
  },
  "homepage": "https://github.com/oklemenz/PrinceJS#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "eslint": "^8.57.1",
    "eslint-config": "^0.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.3",
    "vite": "^6.3.5",
    "xml2json": "^0.12.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "phaser": "^3.80.1"
  }
}
